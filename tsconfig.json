{
  "compilerOptions": {
      "outDir": "./build/",
      "rootDir": "./",
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "lib": ["es5", "es6", "dom"],
      "esModuleInterop": true
  },
  "include": [
      "./client/src/**/*", 
      "index.d.ts",
  ],
  "awesomeTypescriptLoaderOptions": {
      "reportFiles": [
          "./client/src/**/*"
      ]
  }
}
